@model AmberProject.Models.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <style>
        body {
            background-color: #f1f1f1;
            font-family: Arial, sans-serif;
            padding: 0;
            margin: 0;
        }

        .header {
            display: flex;
            align-items: center;
            background-color: #3051a0;
            color: #fff;
            height: 50px;
            padding: 10px;
        }

        .header-logo {
            height: 50px;
            margin-right: 10px;
        }

        .header-text {
            margin: 0;
            flex-grow: 1;
            text-align: center;
            margin-right: 5%;
        }

        .submit-button {
            background: linear-gradient(to right, #4fc3f7, #01579b);
            color: #fff;
            border-radius: 25px;
            padding: 10px 40px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .submit-button:hover {
                background: linear-gradient(to right, #01579b, #4fc3f7);
            }

        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: calc(100vh - 80px);
        }

        .form-container {
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 3px;
            }

                .form-group input[type="text"],
                .form-group input[type="password"],
                .form-group select {
                    width: 100%;
                    box-sizing: border-box;
                }

        .error-message {
            color: red;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <img src="~/Image/logoamber.png" alt="Logo" class="header-logo" />
        <h1 class="header-text">Amber Enterprises India Limited</h1>
    </div>

    <div class="login-container">
        <div class="form-container">
            <h2>Login</h2>

            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.CompanyId, "Company")
                    @Html.DropDownListFor(m => m.CompanyId, new SelectList(Model.CompanyList, "Value", "Text"), "Select a company", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CompanyId)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.UserID)
                    @Html.TextBoxFor(m => m.UserID, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserID)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <button type="submit" class="submit-button">Login</button>
            }
        </div>
    </div>
</body>
